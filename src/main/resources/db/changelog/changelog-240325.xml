<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="240325-1" author="kapamejlbka">
        <createTable tableName="groups">
            <column name="id" type="VARCHAR(64)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="groups_pkey"/>
            </column>
            <column name="displayName" type="VARCHAR(255)"/>
            <column name="parent_id" type="VARCHAR(64)">
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_groups_parent"
                                 baseTableName="groups"
                                 baseColumnNames="parent_id"
                                 referencedTableName="groups"
                                 referencedColumnNames="id"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="240325-2" author="kapamejlbka">
        <addColumn tableName="user_permissions">
            <column name="group_id" type="VARCHAR(255)" defaultValue="DEFAULT"/>
        </addColumn>
        <sql>UPDATE user_permissions SET group_id = group_name;</sql>
    </changeSet>

    <changeSet id="240325-3" author="kapamejlbka">
        <sql>
            INSERT INTO groups (id, "displayName")
            SELECT DISTINCT group_name, group_name
            FROM user_permissions
            WHERE group_name IS NOT NULL;
        </sql>
    </changeSet>

    <changeSet id="240325-4" author="kapamejlbka">
        <sql>
            INSERT INTO groups (id, "displayName")
            SELECT DISTINCT group_name, group_name
            FROM user_groups
            WHERE group_name IS NOT NULL
            ON CONFLICT (id) DO NOTHING;
        </sql>
    </changeSet>

    <changeSet id="240325-5" author="kapamejlbka">
        <addForeignKeyConstraint
                constraintName="fk_user_permissions_groups"
                baseTableName="user_permissions"
                baseColumnNames="group_id"
                referencedTableName="groups"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="240325-6" author="kapamejlbka">
        <addForeignKeyConstraint
                constraintName="fk_user_groups_groups"
                baseTableName="user_groups"
                baseColumnNames="group_id"
                referencedTableName="groups"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="240325-7" author="kapamejlbka">
        <dropColumn tableName="users" columnName="group_id"/>
    </changeSet>

    <changeSet id="240325-8" author="kapamejlbka">
        <dropForeignKeyConstraint
                baseTableName="user_permissions"
                constraintName="fk_user_permissions_groups"/>
        <addForeignKeyConstraint
                constraintName="fk_user_permissions_groups"
                baseTableName="user_permissions"
                baseColumnNames="group_id"
                referencedTableName="groups"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="240325-9" author="kapamejlbka">
        <dropForeignKeyConstraint
                baseTableName="user_groups"
                constraintName="fk_user_groups_groups"/>
        <addForeignKeyConstraint
                constraintName="fk_user_groups_groups"
                baseTableName="user_groups"
                baseColumnNames="group_id"
                referencedTableName="groups"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="240325-10" author="kapamejlbka">
        <renameColumn
                tableName="groups"
                oldColumnName="displayName"
                newColumnName="display_name"
                columnDataType="varchar(255)"/>
    </changeSet>

    <changeSet id="240325-11" author="kapamejlbka">
        <addNotNullConstraint tableName="user_permissions" columnName="value" columnDataType="VARCHAR(255)"/>
    </changeSet>

</databaseChangeLog>
